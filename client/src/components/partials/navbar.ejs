<!-- Navbar -->
<nav class="navbar navbar-expand-lg m-0 p-0">
    <div class="container-fluid m-0 p-0" style="display: block;">
        <!-- Start of Navbar Content -->
        <div class="row navbarRow">
            <!-- Trender Icon -->
            <div class="col-3 navbarCol">
                <a href="/" class="mr-2">
                    <img src="/media/trender.png" alt="Trender Logo" id="trenderLogo">
                </a>
                <% if (pageType == "community") { %>
                <a href="/community/<%= pageTitle %>">
                    <%= pageTitle.toUpperCase() %></a>
                <% } else if (pageType == "topic") { %>
                <% var communityName = community.name %>
                <a href="/community/<%= communityName %>">
                    <%= communityName.toUpperCase() %></a>
                <% } %>
            </div>
            <!-- Search Bar -->

            <!-- Topic Display -->
            <div class="col-6 justify-content-around navbarCol" id="navbarMiddle">
                <a href="#">HOT</a>
                <a href="#">NEW</a>
                <a href="#">TOP</a>
                <a href="#">FUNNY</a>
                <a href="#">SAD</a>
                <a href="#">SKETCHY</a>
            </div>
            <!-- Login/Register Button -->
            <div class="col justify-content-end navbarCol pr-3">
                <% if (isLoggedIn == true) { %>
                <div class="dropdown" id="userNavbarDropdownContainer">
                    <button class="btn" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                        id="userNavbarDropdown">
                        <%= user.username %><i class="fas fa-angle-down" style="color: white; padding-left:10px"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton"
                        id="userNavbarDropdownList">
                        <a class="dropdown-item" href="/user/<%= user.username %>">Settings</a>
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </div>
                </div>
                <% } else if (isLoggedIn == false) { %>
                <button type="button" class="btn btn-primary mr-2 ml-2" id="loginButton">
                    <a href="/login">Login</a></button>
                <button type="button" class="btn btn-light mr-3" id="registerButton">
                    <a href="/register">Register</a></button>
                <% } %>
            </div>
            <!-- End of Login/Register Buttons -->
        </div>
        <!-- End of Navbar Content -->
    </div>
</nav>
<div class="row" id="top" style="height: 80px;"></div>
<!-- End of Navbar -->

<!-- Search Button -->
<a href="#">
    <button type="button" class="btn btn-primary floatButton" id="searchButton">
        <i class="fas fa-search my-float"></i>
    </button>
</a>
<!-- End of Search Button -->

<!-- Sidebar Button -->
<button type="button" id="sidebarCollapse" class="btn btn-primary floatButton sidebarButton">
    <i class="fas fa-bars my-float"></i>
</button>
<!-- End of Sidebar Button -->

<!-- Home Button -->
<a href="#top">
    <button type="button" class="btn btn-primary floatButton" id="homeButton">
        <i class="fas fa-home my-float"></i>
    </button>
</a>
<!-- End of Home Button -->